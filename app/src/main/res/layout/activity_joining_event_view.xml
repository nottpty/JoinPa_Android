<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:background="@drawable/invited_card">

        <FrameLayout
            android:layout_width="277dp"
            android:layout_height="115dp"
            android:layout_gravity="center"
            android:background="@drawable/invited_card">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="296dp"
                android:layout_height="129dp"
                android:layout_gravity="center"
                android:weightSum="3">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#ff59c6ff"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_margin="9dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="55dp"
                        android:id="@+id/img_iconBig"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/playgame_big"
                        android:layout_marginLeft="-20dp"
                        android:layout_marginRight="-20dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:weightSum="8">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Event Name"
                        android:id="@+id/txt_topic"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="3"
                        android:gravity="bottom|center_horizontal"
                        android:paddingBottom="5dp"
                        android:textStyle="bold|italic"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:id="@+id/txt_date"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:textIsSelectable="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:id="@+id/txt_time"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:textIsSelectable="false" />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:weightSum="3"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:text="Join"
                android:id="@+id/btn_join"
                android:textSize="12dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="#ffedefed"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_weight="1"
                android:enabled="true"
                android:shadowColor="#ff610c2e" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:text="Decline"
                android:id="@+id/btn_decline"
                android:layout_weight="1"
                android:textSize="12dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="#ffedefed"
                style="@style/Widget.AppCompat.Button.Small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:text="Invited list"
                android:id="@+id/btn_invitedList"
                android:layout_weight="1"
                android:textSize="12dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="#ffedefed"
                style="@style/Widget.AppCompat.Button.Small" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner name"
            android:id="@+id/txt_ownerName"
            android:layout_gravity="left|top"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold|italic"
            android:textSize="18dp" />
    </FrameLayout>
</LinearLayout>
