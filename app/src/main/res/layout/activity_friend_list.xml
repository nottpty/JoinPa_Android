<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.taweesoft.joinpa.CreateEvent.FriendView.FriendListView.FriendListActivity"
    android:orientation="vertical">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lv_friendsList"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:choiceMode="multipleChoice"
        android:clickable="true"
        android:layout_above="@+id/btn_findFriend" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/btn_next"
        android:layout_weight="0"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/lv_friendsList"
        android:layout_alignEnd="@+id/lv_friendsList" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_findFriend"
        android:background="@drawable/button_find_friend"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btn_next"
        android:layout_alignTop="@+id/btn_next"
        android:layout_toLeftOf="@+id/btn_next"
        android:layout_marginRight="155dp"
        android:layout_marginEnd="155dp" />

</RelativeLayout>
